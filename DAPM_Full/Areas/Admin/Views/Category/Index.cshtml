@model IEnumerable<DAPM_Full.Models.EF.DanhMuc>
@{
    ViewBag.Title = "Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Content/clients/index3.html" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Category" class="nav-link">Danh mục</a>
        </li>
    </ul>
    } 
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh mục</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

   
@{
    ViewBag.Title = "Quản lý danh mục";
}

<div class="container mt">
    <h2 class="text-center mb">Danh Sách Danh Mục</h2>
    <div class="text-right mb">
        <a href="@Url.Action("Add", "Category")" class="btn btn-success">Thêm danh mục mới</a>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Mã danh mục</th>
                <th scope="col">Tên danh mục</th>
                <th scope="col">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.maDanhMuc</td>
                    <td>@item.tenDanhMuc</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("Edit", "Category", new { maDanhMuc = item.maDanhMuc })" class="btn btn-primary">Sửa</a>
                            @using (Html.BeginForm("Delete", "Category", FormMethod.Post, new { @class = "d-inline" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("maDanhMuc", item.maDanhMuc)
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này?');">Xóa</button>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            Chưa có danh mục nào được thêm!!!
        </div>
    }
</div>
        <!-- /.card-body -->
        <div class="card-footer">
         
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>


